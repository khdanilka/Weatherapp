<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="@dimen/standard_padding_left"
    android:orientation="vertical">


    <TextView
        android:id="@+id/result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/empty_weather"
        android:textAlignment="center"
        android:textSize="25dp"/>

    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:id="@+id/image_res"
        android:layout_gravity="center"/>

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:columnCount="2"
        android:rowCount="3">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/standard_padding_left"
        android:textSize="20sp"
        android:layout_column="0"
        android:layout_row="0"
        android:text="@string/pressure"/>

    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/standard_padding_left"
            android:textSize="20sp"
            android:text="@string/wind_speed"
            android:layout_column="0"
            android:layout_row="1"/>
    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/standard_padding_left"
            android:textSize="20sp"
            android:text="@string/moisture"
            android:layout_column="0"
            android:layout_row="2"/>

    <TextView
            android:id="@+id/pressure_res"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/standard_padding_left"
            android:textSize="20sp"
            android:layout_column="1"
            android:layout_row="0"
            android:text="-"/>

    <TextView
            android:id="@+id/wind_speed_res"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/standard_padding_left"
            android:textSize="20sp"
            android:text="-"
            android:layout_column="1"
            android:layout_row="1"/>
    <TextView
            android:id="@+id/moisture_res"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/standard_padding_left"
            android:textSize="20sp"
            android:text="-"
            android:layout_column="1"
            android:layout_row="2"/>


    </GridLayout>


    <Button
        android:id="@+id/btn_share"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/share_button"
        android:layout_margin="@dimen/standard_padding_left"/>




</LinearLayout>
